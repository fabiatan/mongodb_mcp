# MongoDB Connection
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DEFAULT_DB=test

# Server Settings
READ_ONLY=false
MAX_DOCUMENTS=100

# MCP Transport
MCP_TRANSPORT=streamable-http
MCP_HOST=0.0.0.0
MCP_PORT=8000

# Logging
LOG_LEVEL=INFO

# Authentication (optional)
# Set AUTH_MODE to "api_key" to enable authentication
# AUTH_MODE=api_key
# MCP_API_KEY=your-secret-api-key-here
AUTH_MODE=disabled
